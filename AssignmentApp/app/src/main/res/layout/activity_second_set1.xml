<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#852EB3C9"
    tools:context=".SecondSet1">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Home"
        android:textColor="#000000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Name: "
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tv"
        android:layout_toRightOf="@id/tv1"
        android:text="Null"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/sem1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Sem1"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/sem1"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:hint="enter credit"
        android:textSize="15dp"
        android:ems="8"
        />

    <EditText
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt1"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:hint="enter earned grade points"
        android:textSize="15dp"
        android:ems="8"
        />

    <TextView
        android:id="@+id/sgpa1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="SGPA"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/sem2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sgpa1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Sem2"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/sem2"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:hint="enter credit"
        android:textSize="15dp"
        android:ems="8"
        />

    <EditText
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt3"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:hint="enter earned grade points"
        android:textSize="15dp"
        android:ems="8"
        />

    <TextView
        android:id="@+id/sgpa2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="SGPA"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/cgpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sgpa2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="CGPA"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/per"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cgpa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Percentage"
        android:textColor="#000000"
        android:textSize="20dp" />

</RelativeLayout>